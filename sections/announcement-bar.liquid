{{ 'section-announcment-bar.css' | asset_url | stylesheet_tag }}

{% if section.settings.text != blank %}
    <div class="color-{{ section.settings.color_scheme }} announcment-bar--wrap">
        <div class="anncouncement-bar--block">
            {% if section.settings.link != blank %}
                <a href="{{ section.settings.link }}" title="block.settings.text" aria-label="announcment">
            {% endif %}
                {% if section.settings.text != blank %}
                    <p class=>{{ section.settings.text }}</p>
                {% endif %}
            {% if section.settings.link != blank %}
                </a>
            {% endif %}
        </div>
    </div>
{% endif %}
{% schema %}
    {
        "name": "Announcement Bar",
        "class": "anncouncement-bar-section",
        "settings": [
            {
                "type": "text",
                "id": "text",
                "default": "Default announcement here",
                "label": "t:sections.all.colors.text"
            },
            {
                "type": "url",
                "id": "link",
                "label": "t:sections.all.colors.link"
            },
            {
                "type": "color_scheme",
                "id": "color_scheme",
                "label": "t:sections.all.colors.label",
                "default": "scheme-1"
            }
        ],
       
        "presets": [
            {
                "name": "Announcement bar",
                
            }
        ]
    }
{% endschema %}